generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tweets {
  id         String   @id @db.Uuid
  author_id  String   @db.Uuid
  content    String
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([created_at(sort: Desc)], map: "idx_tweets_created_at")
}

model users {
  id         String  @id @db.Uuid
  name       String?
  avatar_url String?
  bio        String?
}
